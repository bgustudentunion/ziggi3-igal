<!DOCTYPE html>
<html lang="he">
    <head>
        <title>זיגי</title>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <% assets.js.forEach(function(js){ %>
            <script src="<%=js%>"></script><% }) %>
        <% assets.css.forEach(function(css){ %>
            <link rel="stylesheet" type="text/css" href="<%=css%>"/><% }) %>
    </head>
    <body ng-app="ZiggiCalendar">
      <div ng-controller="ZiggiCalendarController as ctrl" ng-cloak id="calendar">
        <div class="year" ng-repeat="year in ctrl.calendar">
          <div class="month" ng-repeat="month in year.months">
            <h2>{{month.name}} {{year.year}}</h2>
            <ul>
              <li ng-repeat="day in month.days | orderBy:'day'" ng-class="day.today ? 'today' : ''">
                <span ng-show="day.day > 0">
                  {{day.day}}
                  <span ng-repeat="ev in day.events">
                    {{ev}}
                  </span>
                </span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </body>
</html>