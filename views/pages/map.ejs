<!DOCTYPE html>
<html lang="he">
    <head>
        <title>זיגי</title>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <% assets.js.forEach(function(js){ %>
            <script src="<%=js%>"></script><% }) %>
        <% assets.css.forEach(function(css){ %>
            <link rel="stylesheet" type="text/css" href="<%=css%>"><% }) %>
        <script src="http://maps.google.com/maps/api/js?language=he"></script>
    </head>
    <body ng-app="ZiggiMap">
      <div ng-controller="ZiggiMapController as ctrl" ng-cloak>
        <ng-map center="{{ctrl.lat}},{{ctrl.lng}}" zoom="{{ctrl.zoom}}">
          <marker ng-repeat="marker in ctrl.buildings" position="[{{marker.lat}},{{marker.lng}}]" icon="http://chart.apis.google.com/chart?chst=d_map_pin_letter&chld={{marker.name}}|{{ctrl.baseColor}}">
          </marker>
      </div>
    </body>
</html>